<!-- dealer's hand -->

<div class="row">
  <div class="col-xs-12 col-sm-4 col-sm-offset-4">
    <p>Dealer's Hand: <%= dealer.hand_view %></p>
    <p>Hand Value: <%= dealer.hand_value %></p>
  </div>
</div>


<!-- # player's bet -->

<div class="row">
  <div class="col-xs-12 col-sm-4 col-sm-offset-4">
    <p>Player's Hand: <%= user.hand_view %></p>
    <p>Hand Value: <%= user.hand_value %></p>
  </div>
</div>

<% if !(user.bust? || dealer.bust?) %>
  <%= erb :'shared/_user_interaction_form' %>
<% elsif user.bust? %>
  <%= erb :'shared/_play_again', locals: { user: user,
                                           dealer: dealer } %>
<% elsif dealer.bust? %>
  <%= erb :'shared/_play_again', locals: { user: user,
                                           dealer: dealer } %>
<% end %>

